{# src/AppBundle/Resources/views/form/step1.html.twig #}

<!-- OrderType's form's view -->
<button type="button" href="#step1" class="btn btn-warning" data-toggle="collapse" id="buy">Acheter un billet</button>

<div class="collapse" id="step1">
  {{ form_start(form) }}
  {{ form_errors(form) }}
  <div class="form-group">
    {{ form_label(form.visitDay, "Jour de la visite", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.visitDay) }}
    <div class="col-sm-10">
      {{ form_widget(form.visitDay, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.type, "Type de billet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
      {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.email) }}
    <div class="col-sm-10">
      {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
  {{ form_end(form) }}
</div>
